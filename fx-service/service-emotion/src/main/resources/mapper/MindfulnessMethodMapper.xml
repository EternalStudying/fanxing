<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fanxing.emotion.mapper.MindfulnessMethodMapper">

    <sql id="columns">
        id, des, create_time, update_time, is_deleted
    </sql>

    <select id="getMindfulnessMethod" resultType="com.fanxing.model.entity.emotion.MindfulnessMethod">
        SELECT t1.<include refid="columns"/> FROM mindfulness_method AS t1
        JOIN
        (SELECT ROUND(RAND() * (SELECT MAX(id) FROM mindfulness_method)) AS id) AS t2
        WHERE t1.id >= t2.id
        ORDER BY t1.id
        LIMIT 1;
    </select>
</mapper>